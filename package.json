{
  "name": "node-server",
  "version": "0.0.1",
  "private": true,
  "main": "server/index.ts",
  "type": "module",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.11",
    "axios": "^0.24.0",
    "express": "^4.18.2",
    "express-session": "^1.17.2",
    "jsonwebtoken": "^9.0.1",
    "keycloak-connect": "^22.0.1",
    "mongoose": "^7.5.1",
    "openid-client": "^5.6.4",
    "passport": "^0.7.0",
    "passport-oauth2": "1.8.0",
    "passports": "^0.2.1",
    "jwt-decode": "^4.0.0",
    "@keycloak/keycloak-admin-client": "^22.0.1",
    "@types/async-retry": "^1.4.8",
    "@types/lodash": "^4.17.4",
    "async-retry": "^1.3.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "@types/express-session": "^1.17.4",
    "@types/passport": "^1.0.16",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "@types/passport-oauth2": "^1.4.15",
    "@types/jwt-decode": "^3.1.0",
    "dotenv": "^16.4.5",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.0.9",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "nodemonConfig": {
    "verbose": true,
    "ext": "js, ts, json, mjs",
    "watch": [
      "server/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "node --loader ts-node/esm ./server/index.ts",
    "build": "node --loader ts-node/esm ./server/index.ts",
    "server": "node ./dist-server/index.js --trace-warnings",
    "dev": "PORT=3001 NODE_ENV=development npm-run-all build server",
    "win-dev": "set PORT=3001&& set NODE_ENV=development&& npm-run-all build server",
    "transpile": "tsc --project ./",
    "clean": "rimraf dist-server",
    "test": "jest",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "migration": "node --loader ts-node/esm ./server/migration-tool/index.ts"
  }
}
